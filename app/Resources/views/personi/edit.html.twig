{% extends 'layouts/main.html.twig' %}

{% block content %}

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <div class="col-xs-3">
                            <h3 class="box-title page-header">Editar persona <small>{{ person.name }}</small></h3>
                        </div>
                    </div>
                    <div class="box-body">
                        {{ form_start(edit_form) }}
                        <div class="col-xs-3">

                            <div class="form-group">
                                {{ form_widget(edit_form.department) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(edit_form.name) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(edit_form.cargo) }}
                            </div>

                            <button type="submit" class="btn btn-warning">
                                <span class="glyphicon glyphicon-floppy-open"></span>
                                Guardar
                            </button>
                            <a class="btn btn-default" href="{{ path('personi_index') }}">Regresar al listado</a>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
