{% extends 'layouts/main.html.twig' %}

{% block content %}
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header">
                        <a href='{{ path('distributione_new') }}' class="btn btn-success btn-xs">Nueva distribucion</a>
                        <h2 class="box-title no-padding" style="margin-left: 25%; ">Distribuciones externas</h2>
                        <div class="box-tools">
                            <form class="form-inline" action="{{ path('distributione_index') }}" method="get" style="margin-bottom: 2px">
                                <input type="text" class="form-control" placeholder="Buscar" name="filter">
                                <button type="submit" class="btn btn-success">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive" style="padding-top: 0">

                        <table class="table table-hover table-condensed">
                            <tr>
                                <th>{% include 'layouts/include/order.html.twig' with {name:' Instalaci√≥n', column: 'h.name'} %}</th>
                                <th>Equipos</th>
                                <th>{% include 'layouts/include/order.html.twig' with {name:' Fecha', column: 'd.requestDate'} %}</th>
                                <th>Acciones</th>
                            </tr>
                            {% for distribution in pagination %}
                                <tr>
                                    <td>{{ distribution.hotel }}</td>
                                    <td>
                                        {% for equipment in distribution.equipments %}
                                            {{ equipment.model.brand.type }} {{ equipment.model.brand }} {{ equipment.model }} <b>{{ equipment.ni }} {{ equipment.ns }}</b> <br>
                                        {% endfor %}

                                    </td>
                                    <td>{{ distribution.requestDate | date('Y-m-d')}}</td>
                                    <td>
                                        <a href="{{ path('distributione_show',{ 'id' : distribution.id }) }}" target="_blank" class="link-tooltip" data-placement="top" title="Detalles">
                                            <span class="glyphicon glyphicon-option-horizontal"></span>
                                        </a>
                                        <a href="{{ path('distributione_edit',{ 'id' : distribution.id }) }}" class="link-tooltip" data-placement="top" title="Editar">
                                            <span class="glyphicon glyphicon-edit"></span>
                                        </a>
                                        <a href="{#{{ path('type_edit',{ 'id' : type.id }) }}#}" class="link-tooltip" data-placement="top" title="Imprimir">
                                            <span class="glyphicon glyphicon-print"></span>
                                        </a>
                                        <a href=""
                                           class="link-tooltip link-eliminar"
                                           data-url="{#{{ path('type_delete',{ 'id':type.id }) }}#}"
                                           data-toggle="modal"
                                           data-target="#modal-delete"
                                           data-placement="top"
                                           title="Eliminar"
                                        >
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- ./col -->
        </div>
    </section>
{% endblock %}
