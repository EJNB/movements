{% extends 'layouts/main.html.twig' %}

{% block content %}

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <div class="col-xs-12">
                            <h3 class="box-title page-header" style="margin-left: 33%;">Editar factura
                                <small style="display: inline">{{ invoice.invoiceId }}
                                </small>
                            </h3>
                        </div>
                    </div>
                    <div class="box-body">
                        {{ form_start(edit_form) }}
                            <div class="form-horizontal">

                                <!-- Factura -->
                                <div class="form-group">
                                    {{ form_label(edit_form.invoiceId,'No. Factura :', { 'label_attr':{ 'class':'col-sm-3 control-label' } }) }}
                                    <div class="col-sm-4">
                                        {{ form_errors(edit_form.invoiceId) }}
                                        {{ form_widget(edit_form.invoiceId) }}
                                    </div>
                                </div>

                                <!-- Date -->
                                <div class="form-group">
                                    {{ form_label(edit_form.date,'Fecha :', { 'label_attr':{ 'class':'col-sm-3 control-label' } }) }}
                                    <div class="col-sm-4">
                                        {{ form_errors(edit_form.date) }}
                                        {{ form_widget(edit_form.date) }}
                                    </div>
                                </div>

                                <!-- document -->
                                <div class="form-group">
                                    {{ form_label(edit_form.document,'Factura escaneada :', { 'label_attr':{ 'class':'col-sm-3 control-label' } }) }}
                                    <div class="col-sm-4">
                                        {{ form_errors(edit_form.document) }}
                                        {{ form_widget(edit_form.document) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-sm-3"></label>
                                    <div class="col-sm-5">
                                        <button type="submit" class="btn btn-primary">
                                            <span class="glyphicon glyphicon-floppy-open"></span> Guardar
                                        </button>
                                        <a href="{{ path('invoice_index') }}" class="btn btn-default">Regresar al listado</a>
                                    </div>
                                </div>
                            </div><!-- /. form-horizontal-->
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
