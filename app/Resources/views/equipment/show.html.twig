{% extends 'base.html.twig' %}

{% block body %}
    <h1>Equipment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ equipment.description }}</td>
            </tr>
            <tr>
                <th>Ns</th>
                <td>{{ equipment.ns }}</td>
            </tr>
            <tr>
                <th>Ni</th>
                <td>{{ equipment.ni }}</td>
            </tr>
            <tr>
                <th>Createat</th>
                <td>{% if equipment.createAt %}{{ equipment.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('equipment_edit', { 'id': equipment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
