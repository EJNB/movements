                                    {#<div class="show_brands">#}
                                        {#{{ include('layouts/include/brands.html.twig') }}#}
                                    {#</div>#}

                                    <!--Modelo -->
                                    <div class="show_models">

                                        {{ include('layouts/include/models.html.twig') }}
                                    </div>

                                   <!-- Description -->
                                    <div class="form-group">
                                        {{ form_label(form.description,'Descripci√≥n :', { 'label_attr':{ 'class':'col-sm-3 control-label' } }) }}
                                        <div class="col-sm-4">
                                            {{ form_errors(form.description) }}
                                            {{ form_widget(form.description) }}
                                        </div>
                                    </div>

                                    <!-- createAt -->
                                    <div class="form-group">
                                        {{ form_label(form.createAt,'Fecha :', { 'label_attr':{ 'class':'col-sm-3 control-label' } }) }}
                                        <div class="col-sm-2">
                                            {{ form_errors(form.createAt) }}
                                            {{ form_widget(form.createAt) }}
                                        </div>
                                    </div>

                                    <!--cantidad de medios a introducir-->
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Cantidad :</label>
                                        <div class="col-sm-1">
                                            <input class="form-control cantidad" required type="text" name="cantidad">
                                        </div>
                                    </div>

                                    <!--NI Aleatorios o Consecutivos-->
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">N. Inv/N. Serie :</label>
                                        <div class="col-sm-4">
                                            <input required type="radio" value="1" name="select_ni_type" class="icheck radio_generate_ni"> Aleatorios
                                            <input required type="radio" value="2" name="select_ni_type" class="icheck radio_generate_ni"> Consecutivos
                                        </div>
                                    </div>

                                    <!--Aqui se generaran los ni y los ns q le diga en la cantidad-->
                                    <div class="show_inputs_ni_ns">
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-3"></label>
                                        <div class="col-sm-5">
                                            <button type="submit" class="btn btn-primary">
                                                <span class="glyphicon glyphicon-floppy-open"></span> Guardar
                                            </button>
                                            <a href="{{ path('equipment_index') }}" class="btn btn-default">Regresar al listado</a>
                                        </div>
                                    </div>

                                </div>
                            {#</div><!-- /.col-md-5 -->#}
                            {{ form_end(form) }}
                        </div><!-- /.container-fluid -->
                    </div> <!-- /.box-body -->

                </div><!-- /.box -->
            </div><!-- /.col-md-12-->
