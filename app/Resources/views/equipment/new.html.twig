{% extends 'layouts/main.html.twig' %}

{% block content %}

    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="page-header">Agragar equipo</h3>
                    </div>
                    <div class="box-body">
                        <div class="container-fluid">
                            {{ form_start(form,{'attr' : { 'class' : 'form-horizontal'} }) }}
                                <!-- Description -->
                                <div class="form-group">
                                    <label>Date masks:</label>
                                    {{ form_widget(form.description) }}
                                </div>
                                <!-- N. Inv -->
                                <div class="form-group">
                                    <label>Date masks:</label>
                                    {{ form_widget(form.ni) }}
                                </div>
                                <!-- N. Ser -->
                                <div class="form-group">
                                    <label>Date masks :</label>
                                    {{ form_widget(form.ns) }}
                                </div>

                                <div class="show_types">
                                    {{ include('layouts/include/types.html.twig') }}
                                </div>

                                <!--Marca-->
                                <div class="show_brands">
                                    {{ include('layouts/include/brands.html.twig') }}
                                </div>

                                <!--Modelo -->
                                <div class="show_models">
                                    {{ include('layouts/include/models.html.twig') }}
                                </div>

                                <input type="submit" value="Create" />
                            {{ form_end(form) }}

                        </div><!-- /.container-fluid -->
                    </div> <!-- /.box-body -->

                </div><!-- /.box -->
            </div><!-- /.col-md-12-->
        </div><!-- /.row -->
    </div><!-- /.content -->
        <!--tipo-->

    <ul>
        <li>
            <a href="{{ path('equipment_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
