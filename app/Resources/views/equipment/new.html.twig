{% extends 'layouts/main.html.twig' %}

{% block content %}

    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="page-header">Agregar equipo</h3>
                    </div>
                    <div class="box-body">
                        <div class="container-fluid">
                            {{ form_start(form) }}
                            {#<div class="col-md-12">#}
                                <div class="form-horizontal">

                                    <!--types-->
                                    {#<div class="show_types">#}
