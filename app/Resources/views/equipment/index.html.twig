                                           {#title="Eliminar"#}
                                        {#>#}
                                            {#<span class="glyphicon glyphicon-trash"></span>#}
                                        {#</a>#}
                                    {#</td>#}
                                </tr>
                            {% endfor %}
                        </table>
                    <a href="{{ path('equipment_new') }}" class="btn btn-primary">Agregar</a>
                    </div>


