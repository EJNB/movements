{% extends 'layouts/main.html.twig' %}

{% block content %}
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Equipos</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table class="table table-hover table-condensed">
                            <tr>
                                <th>Tipo</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                {#<th>Description</th>#}
                                <th>N&uacute;mero de Inventario</th>
                                <th>N&uacute;mero de serie</th>
                                <th>Introducido en</th>
                                <th>Acciones</th>
                            </tr>
                            {% for equipment in equipments %}
                                <tr>
                                    <td>{{ equipment.model.brand.type }}</td>
                                    <td>{{ equipment.model.brand }}</td>
                                    <td>{{ equipment.model }}</td>
                                    {#<td>{{ equipment.description }}</td>#}
                                    <td>{{ equipment.ni }}</td>
                                    <td>{{ equipment.ns }}</td>
                                    <td>{% if equipment.createAt %}{{ equipment.createAt|date('d-m-Y H:i:s') }}{% endif %}</td>
                                    <td>
                                        <a href="{{ path('equipment_show', { 'id': equipment.id }) }}" data-toggle="tooltip" data-placement="top" title="Detalles">
                                            <span class="glyphicon glyphicon-option-horizontal"></span>
                                        </a>
                                        <a href="{{ path('equipment_edit', { 'id': equipment.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        <a href="javascript:void(0)"
                                           class="link-tooltip link-eliminar"
                                           data-url="{{ path('equipment_delete',{ 'id':equipment.id }) }}"
                                           data-toggle="modal"
                                           data-target="#modal-delete"
                                           data-placement="top"
                                           title="Eliminar"
                                        >
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                        <a href="{{ path('equipment_new') }}" class="btn btn-primary">Agregar</a>
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- ./col -->
        </div>
    </section>

    {{ include('layouts/include/modals.html.twig') }}
{% endblock %}
