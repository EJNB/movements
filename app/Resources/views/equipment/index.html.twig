{% extends 'layouts/main.html.twig' %}

{% block content %}
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Equipos</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table class="table table-hover table-condensed">
                            <tr>
                                <th>Id</th>
                                <th>Description</th>
                                <th>Ns</th>
                                <th>Ni</th>
                                <th>Createat</th>
                                <th>Acciones</th>
                            </tr>
                            {% for equipment in equipments %}
                                <tr>
                                    <td><a href="{{ path('equipment_show', { 'id': equipment.id }) }}">{{ equipment.id }}</a></td>
                                    <td>{{ equipment.description }}</td>
                                    <td>{{ equipment.ns }}</td>
                                    <td>{{ equipment.ni }}</td>
                                    <td>{% if equipment.createAt %}{{ equipment.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('equipment_show', { 'id': equipment.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('equipment_edit', { 'id': equipment.id }) }}">edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                    {#<td>#}
                                        {#<a href="{{ path('model_edit',{ 'id' : model.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar">#}
                                            {#<span class="glyphicon glyphicon-pencil"></span>#}
